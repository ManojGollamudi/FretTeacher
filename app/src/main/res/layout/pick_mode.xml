<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/keyboardgrey">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/my_toolbar"
        android:background="@color/bluedark">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:orientation="vertical">


                <RelativeLayout
                    android:id="@+id/cardview_quiz"
                    android:layout_weight="0.5"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <Button
                        android:id="@+id/quiz_button"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal = "true"
                        android:layout_centerVertical = "true"
                        android:background="@drawable/border_tan"
                        android:text = "Quiz"
                        android:textColor="@color/dark"
                        android:onClick="startQuiz"/>

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text = "Beat your high score!"
                        android:layout_below="@id/quiz_button"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/cardview_learn"
                    android:layout_weight="0.5"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <Button

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal = "true"
                        android:layout_centerVertical = "true"
                        android:background="@drawable/border_tan"
                        android:text = "Learn"
                        android:textColor="@color/dark"
                        android:textSize="50sp"
                        android:onClick="startLearn"/>

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text = "Learn the fretboard!"
                        android:layout_centerHorizontal="true"
                        android:textSize="50sp"
                        android:gravity="center"/>

                </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>