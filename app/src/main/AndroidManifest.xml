<?xml version="1.1" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.manojgollamudi.fretteacher">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".TitleScreen" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".GameList" android:screenOrientation="portrait"></activity>
        <activity android:name=".Quiz" android:screenOrientation="portrait" ></activity>
        <activity android:name=".End" android:screenOrientation="portrait"></activity>
        <activity android:name=".Flashcards" android:screenOrientation="landscape"></activity>
        <activity android:name=".FlashcardsFretpicker" android:screenOrientation="portrait" ></activity>
    </application>

</manifest>
